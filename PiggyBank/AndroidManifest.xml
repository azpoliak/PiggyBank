<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piggybank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pigbank"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.piggybank.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
        	android:name="com.example.piggybank.Deposit"
        	android:label="@string/deposit" >
        </activity>
        
         <activity
        	android:name="com.example.piggybank.Withdraw"
        	android:label="@string/withdraw" >
        </activity>
        
          <activity
        	android:name="com.example.piggybank.Goals"
        	android:label="@string/goals" >
        </activity>
    </application>

</manifest>
